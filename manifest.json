{
  "manifest_version": 2,
  "name": "Polly",
  "version": "0.1",
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "injector.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "<all_urls>",
    "storage",
    "tabs"
  ],
  "web_accessible_resources": [
    "polyfills/ResizeObserver.js"
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "Polly",
    "default_popup": "browserAction.html"
  },
  "background": {
    "scripts": ["bg.js"]
  }
}
